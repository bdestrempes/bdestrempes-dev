---
import Link from './Link.astro'
import type { Heading } from './TableOfContents.astro'

const { heading } = Astro.props
---

<li class="relative pl-6 text-sm text-foreground/60 xl:pl-0">
  <span
    class="absolute left-2 top-[0.8em] size-1.5 rounded-full bg-foreground/60 xl:hidden"
  ></span>
  <Link
    href={'#' + heading.slug}
    class="py-1 underline decoration-transparent underline-offset-[3px] transition-colors duration-200 hover:decoration-inherit xl:py-0"
  >
    {heading.text}
  </Link>
  {
    heading.subheadings.length > 0 && (
      <ul class="translate-x-0 xl:ml-4 xl:mt-2 xl:flex xl:translate-x-0 xl:flex-col xl:gap-2">
        {heading.subheadings.map((subheading: Heading) => (
          <Astro.self heading={subheading} />
        ))}
      </ul>
    )
  }
</li>
